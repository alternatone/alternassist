{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    "*.html": "html",
    "*.js": "javascript",
    "*.json": "jsonc"
  },
  "files.exclude": {
    "node_modules": true,
    "dist": true,
    ".git": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true
  }
}
