{
  "name": "alternassist",
  "version": "1.0.0",
  "description": "All-in-one accounting and project management web app for creative professionals",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:verbose": "NODE_ENV=development ELECTRON_ENABLE_LOGGING=1 electron .",
    "dev:watch": "nodemon --watch src --exec \"electron .\"",
    "web": "python3 -m http.server 8080",
    "build": "electron-packager . Alternassist --platform=darwin --arch=arm64 --icon=src/renderer/assets/icon.icns --out=dist --overwrite",
    "build:all": "electron-packager . Alternassist --platform=all --arch=all --icon=src/renderer/assets/icon.icns --out=dist --overwrite",
    "clean": "rm -rf dist/",
    "format": "prettier --write \"src/**/*.{js,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css,json}\""
  },
  "keywords": [
    "accounting",
    "project-management",
    "invoicing",
    "estimates",
    "payments",
    "creative-business",
    "electron",
    "desktop-app",
    "alternatone",
    "pro-tools",
    "ptsl"
  ],
  "author": {
    "name": "Micah Garrido",
    "email": "contact@alternatone.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alternatone/alternassist.git"
  },
  "bugs": {
    "url": "https://github.com/alternatone/alternassist/issues"
  },
  "homepage": "https://github.com/alternatone/alternassist#readme",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "electron-log": "^5.4.2",
    "protobufjs": "^7.5.3"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.4",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^3.0.2"
  }
}
